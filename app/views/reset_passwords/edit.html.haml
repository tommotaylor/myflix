%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h1 Reset Your Password
      = form_for @user, url: reset_password_path(params[:id]), html: { class: "form-group" } do |f|
        %label New Password
        .row
          .col-sm-4
            = f.password_field :password, class: "form-control"
        %fieldset.form-group.action
          = f.submit "Reset Password", class: "btn btn-default"
