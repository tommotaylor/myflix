%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @invite, class: 'invite' do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            %label Friend's Name
            .row
              .col-sm-4
                = f.text_field :friend_name, class: 'form-control'
          .form-group
            %label Friend's Email Address
            .row
              .col-sm-4
                = f.text_field :friend_email, class: 'form-control'
          .form-group
            %label Invitation Message
            .row
              .col-sm-6
                = f.text_area :message, class: 'form-control', rows: 6, value: "Please join this really cool site!"
        %fieldset.form-group.action
          = f.submit "Send Invitation", class: "btn btn-default"