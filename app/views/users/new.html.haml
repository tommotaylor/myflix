= content_for :head do
  %script(src="https://js.stripe.com/v2/")
  :javascript
    Stripe.setPublishableKey(ENV['PUBLISHABLE_KEY']);

%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6" do |f|
        %header
          %h1 Register
        %fieldset
          - if @invite
            = hidden_field_tag "user[token]", @invite.token
          = f.text_field :email, label: "Email Address"
          = f.password_field :password
          = f.text_field :name, label: "Full Name"
        .control-group.col-sm-offset-2.controls 
          %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['PUBLISHABLE_KEY']}" data-image="/img/documentation/checkout/marketplace.png" data-name="MyFlix Signup Charge" data-description="Â£9.99 to sign up to Myflix!" data-currency="gbp" data-amount="999" data-locale="auto")

