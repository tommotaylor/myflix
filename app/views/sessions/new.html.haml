%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sign_in_path do
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = label_tag :email, "Email Address"
            .row
              .col-sm-4
                = text_field_tag :email, nil, class: "form-control"
          .form-group
            = label_tag :password
            .row
              .col-sm-4
                = password_field_tag :password, nil, class: "form-control"
        %fieldset.form-group.action
          = submit_tag 'Sign In', class: 'btn btn-default'
          = link_to "Forgot your password?", new_reset_password_path            
